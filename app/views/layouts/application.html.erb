<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for?(:title) ? yield(:title) : "LobeLink" %></title>
    <%= stylesheet_link_tag "application" %>
    <%= javascript_include_tag :defaults %>
    <%= csrf_meta_tag %>
    <%= yield(:head) %>
  </head>
  <body>
		<nav id="system_nav">
			<div id="nav_container">
				<div id="nav_left_side">
					<div id="logo">
						<%= link_to("LobeLink", root_path) %>
					</div>
					<div id="new_policy">
						<%= link_to("New Policy", current_user ? new_user_policy_path(current_user) : login_path) %>
					</div>
				</div>
				<div id="nav_right_side">
					<div id="logins">
						<%= current_user ? link_to("Log out", logout_path) : link_to("Log in", login_path) %>
					</div>
				</div>
			</div>
		</nav>
    <div id="container">
      <% flash.each do |name, msg| %>
        <%= content_tag :div, msg, :id => "flash_#{name}" %>
      <% end %>
      <%= content_tag :h1, yield(:title) if show_title? %>
      <%= yield %>
    </div>
  </body>
</html>
